<div class="container mb-3">
  <div class="text-center">
    <h3>Plants</h3>
    <div class="row justify-content-center">
      <div class="col-sm-10 col-md-7 col-lg-5">
        <%= form_with(url: plant_guides_path, method: 'get', local: true, class: 'card card-sm') do |form| %>
        <div class="card-body row no-gutters align-items-center">
          <div class="col-auto">
            <i class="fa fa-search text-body" aria-hidden="true"></i>
          </div>
          <div class="col">
            <%= form.label 'q', 'Search:', class: 'sr-only' %>
            <%= form.text_field :q, id: 'q', value: params[:q], class: "form-control form-control-sm form-control-borderless", placeholder: "Search" %>
          </div>
          <div class="col-auto">
            <%= form.submit 'Search', class: "btn btn-small btn-success" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <hr>
    <div class="row">
      <% @plant_guides.each do |plant_guide| %>
      <div class="col-xs-12 col-sm-12 col-md-3 mb-3">
        <div class="index-plant">
          <h6><%= link_to (plant_guide.name), plant_guide %></h6>
          <%= link_to image_tag(plant_guide.image, class: 'img-fluid', size: '200x200'), plant_guide %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<% if user_signed_in? %>
<%= link_to 'New Plant Guide', new_plant_guide_path %>
<% end -%>
